        </label>
        <input type="text" class="required" id="couponCompanyCity" placeholder="e.g. Dallas" name="couponCompanyCity">
    </div>
</div>

<!-- State -->
<div class="col-md-4 unit">
    <label class="label">State</label>

    <div class="input">
        <label class="icon-left" for="couponCompanyState">
            <i class="fa fa-angle-double-down"></i>
        </label>
        <input type="text" class="required" id="couponCompanyState" placeholder="e.g. Texas" name="couponCompanyState">
    </div>
</div>

<!--Company Website -->
<div class="col-md-12 unit">
    <label class="label">Company Website</label>

    <div class="input">
        <label class="icon-left" for="couponCompanyWebsite">
            <i class="fa fa-globe"></i>
        </label>
        <input type="text" class="required url" id="couponCompanyWebsite" name="couponCompanyWebsite"
               placeholder="www.theRRD.com">
    </div>
</div>

<!-- First Name -->
<div class="col-md-6 unit">
    <label class="label">First Name</label>

    <div class="input">
