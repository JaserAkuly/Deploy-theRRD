<!-- Company Name -->
<div class="col-md-12 unit">
    <label class="label">Company Name</label>

    <div class="input">
        <label class="icon-left" for="couponCompanyName">
            <i class="fa fa-user"></i>
        </label>
        <input type="text" class="required letterswithbasicpunc" id="couponCompanyName" name="couponCompanyName"
               placeholder="e.g XYZ Company">
    </div>
</div>

<!-- Company Address 1 -->
<div class="col-md-12 unit">
    <label class="label">Address 1</label>

    <div class="input">
        <label class="icon-left" for="couponCompanyAddress1">
            <i class="fa fa-building-o"></i>
        </label>
        <input type="text" class="required" id="couponCompanyAddress1"
               placeholder="e.g. 443 Seventh Avenue, 16th Floor"
               name="couponCompanyAddress1">
