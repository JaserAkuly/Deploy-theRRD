            <i class="fa fa-user"></i>
        </label>
        <input type="text" class="required" id="couponFirstName" name="couponFirstName"
               placeholder="e.g John">
    </div>
</div>

<!-- Last Name -->
<div class="col-md-6 unit">
    <label class="label">Last Name</label>

    <div class="input">
        <label class="icon-left" for="couponLastName">
            <i class="fa fa-user"></i>
        </label>
        <input type="text" class="required" id="couponLastName" name="couponLastName"
               placeholder="e.g Doe">
