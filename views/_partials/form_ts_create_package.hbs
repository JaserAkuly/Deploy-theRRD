<script>
    $(function() {
        /**CheckBox Value Function **/
        var $checkes = $('input:checkbox[name="tscpService[]"]').change(function () {
            var vals = $checkes.filter(':checked').map(function () {
                return this.value;
            }).get();
            document.getElementById('vals').value = JSON.stringify(vals);
        });
    })
</script>
