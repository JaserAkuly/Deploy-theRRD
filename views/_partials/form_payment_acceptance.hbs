<!-- First Name -->
<div class="span6 unit">
    <label class="label">First Name</label>

    <div class="input">
        <label class="icon-left" for="pasFirstName">
            <i class="fa fa-user"></i>
        </label>
        <input type="text" class="required" id="pasFirstName" name="pasFirstName"
               placeholder="e.g John">
    </div>
</div>

<!-- Last Name -->
<div class="span6 unit">
    <label class="label">Last Name</label>

    <div class="input">
        <label class="icon-left" for="pasLastName">
            <i class="fa fa-user"></i>
        </label>
        <input type="text" class="required" id="pasLastName" name="pasLastName"
               placeholder="e.g Doe">
    </div>
</div>

<!-- Email -->
<div class="span6 unit">
    <label class="label">Email</label>

    <div class="input">
        <label class="icon-left" for="pasEmail">
            <i class="fa fa-envelope-o"></i>
        </label>
        <input type="text" class="required email" id="pasEmail" name="pasEmail"
               placeholder="e.g John@therrd.com">
    </div>
</div>

<!-- Phone Number -->
<div class="span6 unit">
    <label class="label">Phone</label>

    <div class="input">
        <label class="icon-left" for="pasNumber">
            <i class="fa fa-phone"></i>
        </label>
        <input type="text" class="required js-phone-input" placeholder="phone/mobile" id="pasNumber"
               name="pasNumber">
        <span class="tooltip tooltip-right-top">Your contact phone number</span>
    </div>
</div>

<!-- Services -->
<div class="span12 unit">
    <label class="label">Payment Acceptance Services</label>
    <label class="input select">
        <select name="pasService" class="required">
            <option value="" selected disabled="">--- Please Select Service</option>
            <option value="Accept Credit Card Payments">Accept Credit Card Payments</option>
            <option value="Check Guarantee">Check Guarantee</option>
            <option value="Remote Deposit Capture">Remote Deposit Capture</option>
            <option value="Merchant Cash Advance">Merchant Cash Advance</option>
        </select>
        <i></i>
    </label>
</div>
