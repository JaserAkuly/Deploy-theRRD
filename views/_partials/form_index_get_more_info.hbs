<!-- Name -->
<div class="col-md-6 unit">
    <label class="label">First Name</label>

    <div class="input">
        <label class="icon-left" for="demoCustomerFirstName">
            <i class="fa fa-user"></i>
        </label>
        <input type="text" class="required letterswithbasicpunc" id="demoCustomerFirstName" name="demoCustomerFirstName"
               placeholder="e.g John">
    </div>
</div>

<!-- Last Name -->
<div class="col-md-6 unit">
    <label class="label">Last Name</label>

    <div class="input">
        <label class="icon-left" for="demoCustomerLastName">
            <i class="fa fa-user"></i>
        </label>
        <input type="text" class="required" id="demoCustomerLastName" name="demoCustomerLastName"
               placeholder="e.g Doe">
    </div>
</div>

<!-- Email -->
<div class="col-md-6 unit">
    <label class="label">Email</label>

    <div class="input">
        <label class="icon-left" for="demoCustomerEmail">
            <i class="fa fa-envelope-o"></i>
        </label>
        <input type="text" class="required email" id="demoCustomerEmail" name="demoCustomerEmail" placeholder="e.g John@therrd.com">
    </div>
</div>


<!-- Phone Number -->
<div class="col-md-6 unit">
    <label class="label">Phone</label>

    <div class="input">
        <label class="icon-left" for="demoCustomerNumber">
            <i class="fa fa-phone"></i>
        </label>
        <input type="text" class="required js-phone-input" placeholder="phone/mobile" id="demoCustomerNumber"
               name="demoCustomerNumber">
        <span class="tooltip tooltip-right-top">Your contact phone number</span>
    </div>
</div>

<!-- Subject -->
<div class="col-md-12 unit">
    <label class="label">Subject</label>
    <label class="input select">
        <select name="demoSubject" class="required">
            <option value="" selected disabled="">--- Please select what would you like a Demo in?</option>
            <option value="Tenant Screening">Tenant Screening</option>
            <option value="Employee Screening">Employee Screening</option>
            <option value="Vendor Database">Vendor Database</option>
            <option value="Other">Other</option>
        </select>
        <i></i>
    </label>
</div>
