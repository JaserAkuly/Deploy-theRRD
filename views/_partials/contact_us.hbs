<!-- Contact Us  -->
<div class="divide80" id="contactUsSection"></div>
<div class="container">
    <div class="row">

        <!-- About Us and Form -->
        <div class="col-md-9">
            <h3 class="heading #contactUsTitle">Contact Us</h3>
            <p align="center">Drop us a line or give us a ring. We love to hear about your experience and are happy to answer any questions.</p>

            <div class="contact-form">
                <form class="j-forms js-validate" style="box-shadow: none;" id="contactUsForm" role="form" method="post" action="/contact_us">

                    <!-- First Name -->
                    <div class="col-md-6 unit">
                        <label class="label">First Name</label>

                        <div class="input">
                            <label class="icon-left" for="customerFirstName">
                                <i class="fa fa-user"></i>
                            </label>
                            <input type="text" class="required" id="customerFirstName" name="customerFirstName"
                                   placeholder="e.g John">
                        </div>
                    </div>

                    <!-- Last Name -->
                    <div class="col-md-6 unit">
                        <label class="label">Last Name</label>

                        <div class="input">
                            <label class="icon-left" for="customerLastName">
                                <i class="fa fa-user"></i>
                            </label>
                            <input type="text" class="required" id="customerLastName" name="customerLastName"
                                   placeholder="e.g Doe">
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="col-md-6 unit">
                        <label class="label">Email</label>

                        <div class="input">
                            <label class="icon-left" for="customerEmail">
                                <i class="fa fa-envelope-o"></i>
                            </label>
                            <input type="text" class="required email" id="customerEmail" name="customerEmail"
                                   placeholder="e.g John@therrd.com">
                        </div>
                    </div>

                    <!-- Phone Number -->
                    <div class="col-md-6 unit">
                        <label class="label">Phone</label>

                        <div class="input">
                            <label class="icon-left" for="customerNumber">
                                <i class="fa fa-phone"></i>
                            </label>
                            <input type="text" class="required js-phone-input" placeholder="phone/mobile" id="customerNumber" name="customerNumber">
                            <span class="tooltip tooltip-right-top">Your contact phone number</span>
                        </div>
                    </div>

                    <!-- Subject -->
                    <div class="col-md-12 unit">
                        <label class="label">Subject</label>
                        <label class="input select">
                            <select name="customerSubject" class="required">
                                <option value="" selected disabled="">--- Please Select a Subject</option>
                                <option value="Sales">Sales</option>
                                <option value="Support">Support</option>
                                <option value="Learn More">Learn More</option>
                                <option value="Other">Other</option>
                            </select>
                            <i></i>
                        </label>
                    </div>

                    <!-- Message -->
                    <div class="col-md-12 unit">
                        <label class="label">Message</label>
                        <div class="input">
                            <label class="icon-left" for="customerMessage">
                                <i class="fa fa-file-text-o"></i>
                            </label>
                            <textarea class="required" placeholder="your message..." spellcheck="false" id="customerMessage" name="customerMessage"></textarea>
                        </div>
                    </div>

                    {{>form_recaptcha}}

                    <br>

                    <button id="contactsubmit" disabled name="submit" type="submit" class="btn btn-lg btn-theme-bg" style="margin-left: 10px; width: 100px;">Send</button>

                </form>
            </div>
        </div>

        <!-- Address and Why Us -->
        <div class="col-md-3">

            <!-- Address -->
            <h3 class="heading">Reach Us</h3>
            <ul class="address-info list-unstyled">
                <li><strong><i class="fa fa-fw fa-map-marker"></i> Address:</strong> 4514 Travis St. Suite 213 Dallas, TX 75205</li>
                <li><strong><i class="fa fa-fw fa-envelope"></i> Mail Us:</strong> <a href="mailto:support@theRRD.com?subject=Inquiry" style="color: #f79100">support@theRRD.com</a></li>
                <li><strong><i class="fa fa-fw fa-phone"></i> Phone:</strong> (855) 733-2289</li>
                <li><strong><i class="fa fa-fw fa-print"></i> Fax</strong> (214) 594-2804</li>
            </ul>
            <!-- End Address -->

            <br>

            <!-- Why theRRD -->
            <h3 class="heading">Why theRRD?</h3>
            <ul class="address-info list-unstyled">
                <li><strong><i class="fa fa-fw fa-check"></i></strong> All system access is secure, strictly adhering to all of Credit Bureau Guidelines.</li>
                <li><strong><i class="fa fa-fw fa-check"></i></strong> Generated instantly online and are accessible 24/7/365</li>
                <li><strong><i class="fa fa-fw fa-check"></i></strong> Comprehensive product suite with streamlined activity at a more affordable price.</li>
            </ul>
            <!-- End Why theRRD -->

        </div>
    </div>
</div>
<!-- End of Contact Us -->
